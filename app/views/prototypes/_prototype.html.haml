.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag(prototype.set_main_thumbnail), prototype_path(prototype)
    .caption
      %h3
        = prototype.title
      .proto-meta
        .proto-user
          = link_to prototype.user.name, user_path(prototype.user)
        .proto-posted
          = prototype.posted_date
      .proto-button.btn-group
        = button_to "編集", edit_prototype_path(prototype), method: :get, class: 'btn btn-info '
        = button_to "削除", prototype_path(prototype), method: :delete, class: 'btn btn-danger'
