.col-sm-4.col-md-3.proto-content
  .thumbnail
    = link_to image_tag(prototype.set_main_thumbnail), prototype_path(prototype)
    .caption
      %h3
        = prototype.title
      .proto-meta
        .proto-user
          = link_to prototype.user.name, user_path(prototype.user)
        .proto-posted
          = prototype.posted_date
      .proto-tags
        - prototype.tags.each do |tag|
          = link_to tag.content, tag_path(tag.id), class: 'btn btn-default'
      %div{ id: "btn-group-prototype-#{prototype.id}", class: "btn-group" }
        = render partial: 'likes/like', locals: { prototype: prototype, like: prototype.likes(user_id: current_user.id).first }
        = link_to "編集", edit_prototype_path(prototype), class: 'btn btn-info '
        = link_to "削除", prototype_path(prototype), method: :delete, class: 'btn btn-danger'
